{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile RIB",
            "type": "shell",
            "windows": {
                "command": "python",
                "options": {
                    "env": {
                        "AQSISHOME": "C:\\Program Files (x86)\\Aqsis",
                        "AQSIS_SHADER_PATH": "shaders/:&"
                    }
                }
            },
            "osx": {
                "command": "python3.7",
                "options": {
                    "env": {
                        "AQSISHOME": "/Applications/Aqsis.app"
                    }
                }
            },
            "linux": {
                "command": "python3.7",
                "options": {
                    "env": {
                        "AQSISHOME": "/Applications/Aqsis.app"
                    }
                }
            },
            "args": [
                "scripts/compile_rib.py",
                "${relativeFile}"
            ],

            "problemMatcher": {
                "owner": "custom",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):\\((.+)\\) (.+): (.+)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4,
                }
            },

            "presentation": {
                "echo": false,
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}